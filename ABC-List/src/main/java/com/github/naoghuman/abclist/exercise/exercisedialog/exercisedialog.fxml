<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox id="VBox" spacing="14.0" style="-fx-background-color: LIGHTBLUE;" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.naoghuman.abclist.exercise.exercisedialog.ExerciseDialogPresenter">
    <children>
        <HBox prefHeight="100.0" spacing="14.0" style="-fx-background-color: LIGHTCYAN;">
            <VBox.margin>
                <Insets />
            </VBox.margin>
            <padding>
                <Insets bottom="14.0" left="14.0" right="14.0" top="14.0" />
            </padding>
            <children>
                <Label fx:id="lTimeCounter" text="00:00" />
                <Button fx:id="bPauseOrPlay" mnemonicParsing="false" onAction="#onActionPauseExercise" text="Pause" />
                <Button mnemonicParsing="false" onAction="#onActionStopExercise" text="Stop" />
            </children>
        </HBox>
        <TextField fx:id="tfUserInput" />
    </children>
    <padding>
        <Insets bottom="14.0" left="14.0" right="14.0" top="14.0" />
    </padding>
</VBox>
